<UserControl x:Class="CryptoConnector.ui.AccountStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoConnector.ui"
             mc:Ignorable="d" d:DesignWidth="300" Height="30">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" x:Name="AccName" Content="AccountName" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Grid.Column="1" x:Name="AccStatus" Content="AccountStatus" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
