<Window x:Class="CryptoConnector.ui.SyncStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoConnector.ui"
             mc:Ignorable="d" Height="500" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <StackPanel x:Name="AccountList" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">

        </StackPanel>
        <Button Grid.Row="1" x:Name="CloseButton" Content="Close" 
                HorizontalAlignment="right" VerticalAlignment="Center" Width="75" IsEnabled="False" Click="CloseButton_Click"/>


    </Grid>
</Window>
